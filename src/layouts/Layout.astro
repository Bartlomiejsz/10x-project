---
import '../styles/global.css';

interface Props {
    title?: string;
    description?: string;
}

const { title = 'Home Budget', description = '' } = Astro.props;
const currentYear = new Date().getFullYear();
---

<!doctype html>
<html lang="pl" class="h-full">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/png" href="/favicon.png" />
        <meta name="description" content={description} />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <link rel="manifest" href="/manifest.json" />
    </head>
    <body class="min-h-screen bg-background text-foreground">
        <div class="flex min-h-screen flex-col">
            <header class="border-b border-border bg-card/60" role="banner">
                <div class="mx-auto flex w-full max-w-6xl items-center justify-between px-6 py-6">
                    <a
                        href="/"
                        class="text-lg font-semibold tracking-tight text-primary transition-colors hover:text-primary/80 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary/60 focus-visible:ring-offset-2"
                    >
                        Home Budget
                    </a>
                    <slot name="header-actions" />
                </div>
            </header>

            <main
                id="auth-main"
                role="main"
                class="mx-auto flex w-full max-w-6xl flex-1 flex-col justify-center px-6 py-12"
                aria-live="polite"
            >
                <slot />
            </main>

            <footer class="border-t border-border bg-card/40" role="contentinfo">
                <div
                    class="mx-auto flex w-full max-w-6xl flex-wrap items-center justify-between gap-4 px-6 py-6 text-sm text-muted-foreground"
                >
                    <p>&copy; {currentYear} Home Budget. Wszelkie prawa zastrzeżone.</p>
                    <nav aria-label="Linki pomocnicze" class="flex gap-6">
                        <a href="#" class="transition-colors hover:text-foreground">Polityka prywatności</a>
                        <a href="#" class="transition-colors hover:text-foreground">Warunki korzystania</a>
                    </nav>
                </div>
            </footer>
        </div>
    </body>
</html>
